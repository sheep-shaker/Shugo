{
  "name": "@shugo/central",
  "version": "7.0.0",
  "description": "SHUGO - Système Hiérarchisé d'Utilisation et de Gestion Opérationnelle - Serveur Central",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "db:reset": "npm run db:migrate:undo:all && npm run db:migrate && npm run db:seed",
    "install:setup": "node scripts/install.js",
    "install:production": "node scripts/install.js --production",
    "scripts:create-admin": "node scripts/create-admin.js",
    "scripts:generate-keys": "node scripts/generate-keys.js",
    "scripts:health-check": "node scripts/health-check.js",
    "scripts:backup": "node scripts/backup-database.js",
    "scripts:rotate-keys": "node scripts/rotate-keys.js",
    "scripts:generate-emergency-codes": "node scripts/generate-emergency-codes.js",
    "docker:build": "docker build -t shugo-central .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "shugo",
    "guard",
    "scheduling",
    "planning",
    "security",
    "enterprise"
  ],
  "author": "SHUGO Team",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "argon2": "0.31.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "9.0.2",
    "limiter": "^3.0.0",
    "matrix-js-sdk": "^31.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "natural": "6.10.0",
    "node-cron": "^3.0.3",
    "node-mailjet": "^6.0.5",
    "node-rsa": "1.1.1",
    "pg": "8.11.3",
    "pg-hstore": "2.3.4",
    "qrcode": "^1.5.3",
    "redis": "^5.10.0",
    "sequelize": "6.35.2",
    "speakeasy": "2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "talisman": "1.1.4",
    "unidecode": "0.1.8",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "logs/*",
      "backups/*",
      "tests/*"
    ],
    "delay": 1000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shugo/shugo-backend.git"
  }
}
