# =============================================
# SHUGO Local Server v7.0 - Configuration
# Serveur optimisé pour Raspberry Pi
# =============================================

# ===================
# APPLICATION
# ===================
NODE_ENV=production
APP_NAME=SHUGO-LOCAL

# ===================
# SERVEUR
# ===================
PORT=3001
HOST=0.0.0.0
SERVER_NAME=SHUGO-LOCAL-01

# Identifiants uniques (générés lors de l'installation)
SERVER_ID=
GEO_ID=FR-075-01-01-01

# ===================
# SERVEUR CENTRAL
# ===================
CENTRAL_URL=https://central.shugo.app
CENTRAL_API_KEY=
SHARED_SECRET=

# ===================
# BASE DE DONNÉES
# ===================
# SQLite (défaut pour Raspberry Pi)
DB_DIALECT=sqlite
DB_PATH=./data/shugo_local.db

# PostgreSQL optionnel pour sync
PG_SYNC_ENABLED=false
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=shugo_local
PG_USER=shugo
PG_PASSWORD=

# ===================
# SÉCURITÉ & JWT
# ===================
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ===================
# VAULT (Chiffrement)
# ===================
# Clés 256-bit en hexadécimal (64 caractères)
VAULT_MASTER_KEY=
VAULT_DATA_KEY=
VAULT_BACKUP_KEY=

# ===================
# SYNCHRONISATION
# ===================
SYNC_MODE=auto
# Modes: auto, manual, offline

# ===================
# SAUVEGARDE
# ===================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION=7
BACKUP_EXTERNAL_PATH=

# ===================
# LOGGING
# ===================
LOG_LEVEL=warn
DEBUG=false

# ===================
# PERFORMANCE (Pi)
# ===================
MAX_MEMORY=256
GC_INTERVAL=60000

# ===================
# HARDWARE (GPIO)
# ===================
GPIO_ENABLED=false
BLUETOOTH_ENABLED=false

# ===================
# PLUGINS
# ===================
PLUGINS_ENABLED=true
PLUGIN_CALENDAR=false
PLUGIN_MATRIX=false
