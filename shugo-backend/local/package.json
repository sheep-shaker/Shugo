{
  "name": "@shugo/local",
  "version": "1.0.0",
  "description": "SHUGO Local Server - Optimized for Raspberry Pi",
  "main": "src/index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/index.js",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "install:setup": "node scripts/install.js",
    "install:raspberry-pi": "node scripts/install.js --raspberry-pi",
    "migrate": "node scripts/migrate.js",
    "setup": "node scripts/setup.js",
    "deploy": "node scripts/deploy-to-pi.js",
    "sync:pull": "node scripts/sync-pull.js",
    "sync:push": "node scripts/sync-push.js"
  },
  "dependencies": {
    "@shugo/core": "file:../core",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-forge": "^1.3.1",
    "p-queue": "^6.6.2",
    "pg": "^8.11.3",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.6",
    "tar": "^6.2.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
